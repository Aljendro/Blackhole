{
  "manifest_version": 2,
  "name": "Blackhole",
  "version": "1.1",
  "description": "Track time spent on specified websites and calculate debt accumulated.",
  "permissions": ["storage", "tabs", "alarms", "contextMenus"],
  "background": {
    "scripts": ["js/archive.js", "js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": ["images/*", "archive.html"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
